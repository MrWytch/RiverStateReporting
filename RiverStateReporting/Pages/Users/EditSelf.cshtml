@page
@model RiverStateReporting.Pages.Users.EditSelfModel

@{
    ViewData["Title"] = "Edit Your Profile";
}

<h2 class="text-center mt-3">Edit Your Profile</h2>

<div class="container col-md-4">
    <div class="card bg-light bg-opacity-75 mt-4 rounded">
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            <form method="post">
                <div class="form-group">
                    <label asp-for="Input.FullName" class="control-label">Full Name</label>
                    <input asp-for="Input.FullName" class="form-control" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="control-label">Email</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.CurrentPassword" class="control-label">Current Password</label>
                    <input asp-for="Input.CurrentPassword" type="password" class="form-control" />
                    <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.NewPassword" class="control-label">New Password (at least 5 characters)</label>
                    <input asp-for="Input.NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="control-label">Confirm New Password</label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>


