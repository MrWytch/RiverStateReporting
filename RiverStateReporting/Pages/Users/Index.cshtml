@page
@model RiverStateReporting.Pages.Users.IndexModel

@{
    ViewData["Title"] = "User List";
}

<h2 class="text-center mt-3">User List</h2>

<div class="container">
    <table class="table table-hover bg-light bg-opacity-75 mt-4 rounded">
        <thead>
            <tr>
                <th>Username</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <a asp-page="/Users/Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                        <a asp-page-handler="Delete" asp-route-id="@user.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

