@page
@model RiverStateReporting.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit User";
}

<h2 class="text-center mt-3">Edit User</h2>

<div class="container col-md-4">
    <div class="card bg-light bg-opacity-75 mt-4 rounded">
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="Input.Id" />
                <div class="form-group">
                    <label asp-for="Input.FullName" class="control-label"></label>
                    <input asp-for="Input.FullName" class="form-control" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="control-label"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Role" class="control-label">Role</label>
                    <select asp-for="Input.Role" class="form-control" asp-items="@(new SelectList(Model.Roles))"></select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>



